set $darkgreen   #9ccc65

set $yellow      #ffc107
set $darkyellow  #ffa000

set $blue        #03a9f4
set $darkblue    #81d4fa

set $magenta     #e91e63
set $darkmagenta #ad1457

set $cyan        #009688
set $darkcyan    #26a69a

set $white       #cfd8dc
set $darkwhite   #eceff1

bar {
  position top
  status_command i3blocks
  i3bar_command i3bar -t
  font pango:mononoki, FontAwesome 12
  separator_symbol "|"
  tray_output eDP1
  tray_padding 0
  height 28
  colors {
    statusline         $white
    background         $background
    separator          $darkwhite
    #                  BORDER       BACKGROUND   TEXT
    focused_workspace  $background  $background  $red
    inactive_workspace $background  $background  $white
    active_workspace   $background  $background  $white
    urgent_workspace   $darkblack   $darkblack   $red
    binding_mode       $background  $background  $yellow
  }
}

